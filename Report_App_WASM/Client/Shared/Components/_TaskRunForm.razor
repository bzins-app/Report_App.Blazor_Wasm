    {
        var sendForReportRecipients = false;
        List<string> userEmail = new();
        List<string> recipientsEmails = new();

        var currentUserEmail = (await IdentityProvider.GetUserInfo()).UserMail;
        userEmail.Add(currentUserEmail);
