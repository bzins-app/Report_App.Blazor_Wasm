<MudDialog >
    <DialogContent>
        <MudStack Spacing="0" Style="max-height: 80vh; overflow-y: auto;">
            <_CronEditor @bind-Value="Value"/>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Info" OnClick="Cancel">@Localizer.Get("Cancel")</MudButton>
        <MudButton Color="Color.Primary" OnClick="Validate">@Localizer.Get("Validate")</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public string? Value { get; set; }

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private void Validate()
    {
        MudDialog?.Close(DialogResult.Ok(Value));
    }

}