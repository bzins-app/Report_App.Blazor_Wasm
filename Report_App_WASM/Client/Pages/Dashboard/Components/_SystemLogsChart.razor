@using ApexCharts

@if (logs == null)
{
    <MudProgressLinear Color="MudBlazor.Color.Primary" Indeterminate="true" Class="my-7" />
}
else
{
    <ApexChart TItem="TaksSystemValues"
           Title="@localizer.Get("System logs by level")"
           XAxisType="XAxisType.Datetime" Height="@Height"
           Options="options" @ref="chart">

        <ApexPointSeries TItem="TaksSystemValues"
                     Items="logs"
                     Name="Warnings"
                     SeriesType="SeriesType.Area"
                     XValue="@(e => e.Date.ToLocalTime())"
                     YAggregate="@(e => e.Sum(a=>a.NbrWarnings))"
                     OrderBy="e=>e.X" />

        <ApexPointSeries TItem="TaksSystemValues"
                     Items="logs"
                     Name="Errors"
                     SeriesType="SeriesType.Area"
                     XValue="@(e => e.Date.ToLocalTime())"
                     YAggregate="@(e => e.Sum(a=>a.NbrErrors))"
                     OrderBy="e=>e.X" />
        <ApexPointSeries TItem="TaksSystemValues"
                     Items="logs"
                     Name="Criticals"
                     SeriesType="SeriesType.Area"
                     XValue="@(e => e.Date.ToLocalTime())"
                     YAggregate="@(e => e.Sum(a=>a.NbrCriticals))"
                     OrderBy="e=>e.X" />

    </ApexChart>
}

@code {

    [Parameter] public string Height { get; set; } = null;
    private List<TaksSystemValues>? logs;
    private ApexChartOptions<TaksSystemValues> options = new ApexChartOptions<TaksSystemValues>();
    private ApexChart<TaksSystemValues> chart;

    protected override async Task OnInitializedAsync()
    {
        logs = logs = await dataService.GetValues<TaksSystemValues>("SystemLogs", "api/Dashboard/");
        options.Chart.Stacked = true;
        options.Tooltip = new Tooltip { X = new TooltipX { Format = @"dd \ MM \ yyyy" } };
        options.Theme = new Theme { Palette = PaletteType.Palette3};
        options.Colors = new List<string> { "#008FFB", "#FEB019", "#FF4560" };
        options.Chart.Toolbar = new Toolbar { Show = false };
        options.Stroke=new Stroke { Curve = Curve.Smooth, Width=2 };
    }
}